{
  "name": "@stonx/source",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "dist/local-registry/storage",
        "clear": false
      }
    },
    "check-format:quick": {
      "parallelism": false
    },
    "lint": {
      "cache": true
    },
    "prepush": {
      "dependsOn": ["check-commit", "check-format:quick", "check-lock-files"]
    }
  }
}
