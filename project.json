{
  "name": "@stonx/source",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "dist/local-registry/storage",
        "clear": false
      }
    },
    "populate-local-registry-storage": {
      "cache": true,
      "inputs": [
        {
          "input": "production",
          "projects": ["tag:npm:public"]
        },
        "{workspaceRoot}/scripts/local-registry",
        "native"
      ],
      "dependsOn": [
        "local-registry",
        {
          "target": "build",
          "projects": ["tag:npm:public"]
        }
      ],
      "command": "node ./scripts/local-registry/run-populate-storage.mjs",
      "outputs": ["{workspaceRoot}/dist/local-registry/storage"]
    },
    "check-format:quick": {
      "parallelism": false
    },
    "lint": {
      "dependsOn": ["@stonx/source:lint-pnpm-lock"],
      "cache": true,
      "inputs": ["{projectRoot}/pnpm-lock.yaml"]
    },
    "lint-pnpm-lock": {
      "cache": true,
      "inputs": ["{projectRoot}/pnpm-lock.yaml"]
    },
    "prepush": {
      "dependsOn": ["check-commit", "check-format:quick", "check-lock-files"]
    }
  }
}
